/**app.wxss**/
/* 全局样式重置 */
page {
  --primary-color: #07c160;
  --primary-light: #06ae56;
  --primary-dark: #05994d;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --background: #f6f8fa;
  --card-bg: #ffffff;
  --border: #f0f0f0;
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  
  background: var(--background);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  line-height: 1.6;
}

.container {
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 按钮全局样式重置 */
button {
  background: initial;
  border: none;
  outline: none;
  font-family: inherit;
  transition: var(--transition);
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* 通用工具类 */
.text-center {
  text-align: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mb-4 {
  margin-bottom: 16rpx;
}

.mt-4 {
  margin-top: 16rpx;
}