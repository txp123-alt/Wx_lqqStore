<view class="tab-bar" wx:if="{{showTabBar && list.length > 0}}">
  <view 
    wx:for="{{list}}" 
    wx:key="index" 
    class="tab-bar-item {{selected === index ? 'active' : ''}}" 
    data-path="{{item.pagePath}}" 
    data-index="{{index}}" 
    bind:tap="switchTab">
    <view class="icon-wrapper">
      <image src="{{selected === index ? item.selectedIconPath : item.iconPath}}" class="tab-bar-icon"/>
    </view>
    <text class="tab-bar-text">{{item.text}}</text>
  </view>
</view>