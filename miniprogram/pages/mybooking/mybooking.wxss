.mybooking-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 状态筛选 */
.filter-tabs {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-tab {
  flex-shrink: 0;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.filter-tab.active {
  color: #667eea;
  font-weight: 500;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #667eea;
  border-radius: 2rpx;
}

/* 预定列表 */
.product-list {
  padding: 20rpx;
}

.product-item {
  margin-bottom: 20rpx;
}

.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 卡片顶部：预订编号和时间 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #fafafa;
  border-bottom: 1rpx solid #f0f0f0;
}

.reservation-no {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.reserve-time {
  font-size: 24rpx;
  color: #999;
}

/* 卡片内容：价格信息 */
.card-content {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.info-row {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-row:not(.highlight) {
  flex: 0 0 auto;
}

.info-row.highlight {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.info-row.highlight {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
}

.row-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.info-row.highlight .row-label {
  color: rgba(255, 255, 255, 0.9);
}

.row-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.product-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  margin-bottom: 10rpx;
}

.row-value.total {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 卡片底部：状态和操作 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.status-badge {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

.status-cancelled {
  background-color: #fff1f0;
  color: #cf1322;
}

.status-waiting {
  background-color: #fff7e6;
  color: #d46b08;
}

.status-confirmed {
  background-color: #e6f7ff;
  color: #096dd9;
}

.status-delivering {
  background-color: #f0f9ff;
  color: #0369a1;
}

.status-completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.cancel-btn {
  padding: 10rpx 28rpx;
  background-color: #667eea;
  color: #fff;
  border: none;
  border-radius: 6rpx;
  font-size: 26rpx;
}

.cancel-btn[disabled] {
  background-color: #d9d9d9;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 30rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: block;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 详情弹窗 */
.detail-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-modal {
  width: 90%;
  max-height: 85vh;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.detail-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 36rpx;
  color: #999;
  background-color: #f5f5f5;
  border-radius: 50%;
  transition: all 0.2s;
}

.detail-modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-row.highlight {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  margin: 8rpx 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.detail-value.price {
  color: #ff6b6b;
  font-size: 28rpx;
}

.detail-value.total {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

.detail-value.addr {
  max-width: 400rpx;
  text-align: right;
  word-break: break-all;
}

.detail-section {
  margin-bottom: 20rpx;
}

.section-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #667eea;
}

.remark-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  background-color: #f8f8f8;
  padding: 16rpx;
  border-radius: 8rpx;
}

.detail-modal-footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 30rpx;
}

.close-btn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  background-color: #667eea;
  color: #fff;
  border: none;
  border-radius: 35rpx;
}

