.mybooking-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #667eea;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #667eea;
  border-radius: 2rpx;
}

/* 预定滚动区域 */
.booking-scroll {
  flex: 1;
  height: 0;
}

/* 预定列表 */
.booking-list {
  padding: 20rpx;
}

.booking-item {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 预定头部 */
.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-info {
  display: flex;
  flex: 1;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-details {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.seller-name {
  font-size: 24rpx;
  color: #999;
}

.booking-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-pending {
  background-color: #fff3e0;
  color: #f57c00;
}

.status-completed {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-delivering {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-cancelled {
  background-color: #ffccc7;
  color: #ff4d4f;
}

/* 预定主体 */
.booking-body {
  margin-bottom: 20rpx;
}

.booking-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.label {
  color: #666;
}

.value {
  color: #333;
}

.value.price {
  color: #ff6b6b;
  font-weight: bold;
}

.value.total-price {
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
}

/* 预定底部 */
.booking-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn-detail {
  background-color: #f0f0f0;
  color: #333;
  border: none;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

.btn-cancel {
  background-color: #ff4d4f;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

.btn-rebook {
  background-color: #52c41a;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 40rpx;
}

.btn-go-booking {
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 50rpx;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}