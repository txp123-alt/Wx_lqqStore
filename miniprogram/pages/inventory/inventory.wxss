.container {
  background: var(--background);
  min-height: 100vh;
  padding-top: 32rpx;
}



.summary-section {
  background: var(--card-bg);
  padding: 32rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
}

.summary-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.summary-title::before {
  content: 'üìä';
  font-size: 28rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border);
  transition: var(--transition);
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-item:hover {
  background: rgba(7, 193, 96, 0.02);
  margin: 0 -8rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  border-radius: var(--radius-sm);
}

.summary-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.summary-value {
  font-size: 32rpx;
  color: var(--primary-color);
  font-weight: 700;
}

.list-section {
  background: var(--card-bg);
  padding: 32rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-md);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-title::before {
  content: 'üì¶';
  font-size: 28rpx;
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: var(--radius-md);
  background: var(--card-bg);
  border: 1rpx solid var(--border);
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  gap: 16rpx;
}

.item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: var(--primary-color);
  transform: scaleY(0);
  transition: var(--transition);
}

.item:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-sm);
}

.item:active::before {
  transform: scaleY(1);
}

/* ÂïÜÂìÅÁº©Áï•ÂõæÊ†∑Âºè */
.item-image {
  flex-shrink: 0;
}

.goods-thumbnail {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-sm);
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
}

.item:active .goods-thumbnail {
  transform: scale(0.95);
}

/* ÂïÜÂìÅ‰ø°ÊÅØÊ†∑Âºè */
.item-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  flex: 1;
}

.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 0.5rpx;
}

.item-count {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-count::before {
  content: 'üìä';
  font-size: 20rpx;
}

/* ÂïÜÂìÅÊìç‰ΩúÊåâÈíÆÊ†∑Âºè */
.item-actions {
  display: flex;
  gap: 10rpx;
}

.item-actions button {
  min-width: 140rpx;
  height: 64rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 0;
  border-radius: var(--radius-sm);
  box-shadow: var(--shadow-sm);
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  border: none;
  color: white;
}

.item-actions button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

/* Á©∫Áä∂ÊÄÅÊ†∑Âºè */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: var(--text-tertiary);
  font-size: 28rpx;
  background: var(--card-bg);
  border-radius: var(--radius-md);
  margin: 32rpx 0;
  box-shadow: var(--shadow-md);
  border: 2rpx dashed var(--border);
}

.empty::before {
  content: 'üì¶';
  display: block;
  font-size: 60rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

/* Ê∑ªÂä†ÂïÜÂìÅÂå∫Âüü */
.add-section {
  background: var(--card-bg);
  padding: 32rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-md);
  position: relative;
}

.add-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b6b, #feca57);
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 28rpx;
}

input {
  border: 2rpx solid var(--border);
  border-radius: var(--radius-md);
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
  background: var(--card-bg);
}

input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
  transform: translateY(-2rpx);
}

input::placeholder {
  color: var(--text-tertiary);
}

.add-section button[type="primary"] {
  width: 100%;
  font-size: 30rpx;
  padding: 24rpx;
  border-radius: var(--radius-md);
  font-weight: 600;
  box-shadow: var(--shadow-md);
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  border: none;
  color: white;
  letter-spacing: 1rpx;
}

.add-section button[type="primary"]:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

/* Ê®°ÊÄÅÊ°ÜÊ†∑Âºè */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  width: 90%;
  max-width: 600rpx;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
  animation: slideUp 0.3s ease;
  position: relative;
}

@keyframes slideUp {
  from {
    transform: translateY(60rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
}

.modal-header {
  padding: 32rpx 24rpx 24rpx;
  text-align: center;
  background: linear-gradient(135deg, rgba(7, 193, 96, 0.05), rgba(7, 193, 96, 0.02));
}

.modal-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.modal-title::before {
  content: 'üì¶';
  font-size: 28rpx;
}

.modal-content {
  padding: 32rpx 24rpx;
}

.modal-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding: 16rpx 20rpx;
  background: rgba(7, 193, 96, 0.05);
  border-radius: var(--radius-sm);
  border-left: 4rpx solid var(--primary-color);
}

.modal-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.modal-value {
  font-size: 30rpx;
  color: var(--primary-color);
  font-weight: 700;
}

.modal-content .input-group {
  margin-top: 28rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  font-weight: 600;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid var(--border);
  background: rgba(7, 193, 96, 0.02);
}

.modal-footer button {
  flex: 1;
  border-radius: 0;
  margin: 0;
  border: none;
  font-size: 28rpx;
  padding: 24rpx;
  font-weight: 600;
  box-shadow: none;
  transition: var(--transition);
  background: transparent;
  color: var(--text-secondary);
}

.modal-footer button[type="primary"] {
  background: var(--primary-color);
  color: white;
}

.modal-footer button[type="primary"]:active {
  background: var(--primary-dark);
}

.modal-footer button:first-child {
  border-right: 1rpx solid var(--border);
}