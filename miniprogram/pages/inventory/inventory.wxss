  content: 'üìä';
  font-size: 28rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border);
  transition: var(--transition);
}

.summary-item:last-child {
  border-bottom: none;
}

