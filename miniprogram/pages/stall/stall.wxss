.container {
  background: var(--background);
  min-height: 100vh;
  padding-top: 32rpx;
}



.add-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

input {
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  padding: 15rpx;
  font-size: 28rpx;
}

.list-section {
  background: var(--card-bg);
  padding: 32rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-md);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-title::before {
  content: 'üõí';
  font-size: 28rpx;
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: var(--radius-md);
  background: var(--card-bg);
  border: 1rpx solid var(--border);
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  gap: 16rpx;
}

.item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, var(--primary-color), var(--primary-light));
  transform: scaleY(0);
  transition: var(--transition);
}

.item:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-sm);
}

.item:active::before {
  transform: scaleY(1);
}

/* ÂïÜÂìÅÁº©Áï•ÂõæÊ†∑Âºè */
.item-image {
  flex-shrink: 0;
}

.goods-thumbnail {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-sm);
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
}

.item:active .goods-thumbnail {
  transform: scale(0.95);
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  flex: 1;
}

.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 0.5rpx;
}

.item-count {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-count::before {
  content: 'üìä';
  font-size: 20rpx;
}

.item-cost {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-cost::before {
  content: 'üí∞';
  font-size: 20rpx;
}

.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: var(--text-tertiary);
  font-size: 28rpx;
  background: var(--card-bg);
  border-radius: var(--radius-md);
  margin: 32rpx 0;
  box-shadow: var(--shadow-md);
  border: 2rpx dashed var(--border);
}

.empty::before {
  content: 'üõí';
  display: block;
  font-size: 60rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.action-section {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

/* Á©∫Áä∂ÊÄÅÊèêÁ§∫Ê†∑Âºè */
.empty-tip {
  background: var(--card-bg);
  padding: 40rpx;
  border-radius: var(--radius-lg);
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-md);
  text-align: center;
  border: 2rpx dashed var(--primary-color);
  position: relative;
  overflow: hidden;
}

.empty-tip::before {
  content: 'üí°';
  position: absolute;
  top: -20rpx;
  right: 20rpx;
  font-size: 40rpx;
  opacity: 0.3;
}

.tip-text {
  font-size: 28rpx;
  color: var(--primary-color);
  line-height: 1.6;
  font-weight: 500;
}

/* ÂïÜÂìÅÊìç‰ΩúÊåâÈíÆÊ†∑Âºè */
.item-actions {
  display: flex;
  gap: 10rpx;
}

.item-actions button {
  min-width: 120rpx;
  height: 64rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 0;
  border-radius: var(--radius-sm);
  box-shadow: var(--shadow-sm);
  width: auto;
  transition: var(--transition);
}

.item-actions button[type="primary"] {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  border: none;
  color: white;
}

.item-actions button[type="warn"] {
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  border: none;
  color: white;
}

.item-actions button:active {
  transform: scale(0.95);
}

/* ÂÖ®Â±ÄÊåâÈíÆÂü∫Á°ÄÊ†∑Âºè */
button {
  width: 100%;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: var(--radius-md);
  font-weight: 600;
  box-shadow: var(--shadow-md);
  transition: var(--transition);
  box-sizing: border-box;
  font-family: inherit;
}

button:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-sm);
}

/* ÂîÆÂá∫ÂºπÊ°ÜÊ†∑Âºè */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  width: 90%;
  max-width: 600rpx;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
  animation: slideUp 0.3s ease;
  position: relative;
}

@keyframes slideUp {
  from {
    transform: translateY(60rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
}

.modal-header {
  padding: 32rpx 24rpx 24rpx;
  text-align: center;
  background: linear-gradient(135deg, rgba(7, 193, 96, 0.05), rgba(7, 193, 96, 0.02));
}

.modal-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.modal-title::before {
  content: 'üí∞';
  font-size: 28rpx;
}

.modal-content {
  padding: 32rpx 24rpx;
}

.modal-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  padding: 16rpx 20rpx;
  background: rgba(7, 193, 96, 0.05);
  border-radius: var(--radius-sm);
  border-left: 4rpx solid var(--primary-color);
}

.modal-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.modal-value {
  font-size: 30rpx;
  color: var(--primary-color);
  font-weight: 700;
}

/* Ê®°ÊÄÅÊ°Ü‰∏≠ÁöÑËæìÂÖ•ÁªÑÊ†∑Âºè */
.modal-content .input-group {
  margin-top: 28rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  font-weight: 600;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid var(--border);
  background: rgba(7, 193, 96, 0.02);
}

.modal-footer button {
  flex: 1;
  border-radius: 0;
  margin: 0;
  border: none;
  font-size: 28rpx;
  padding: 24rpx;
  font-weight: 600;
  width: auto;
  box-shadow: none;
  transition: var(--transition);
  background: transparent;
  color: var(--text-secondary);
}

.modal-footer button[type="primary"] {
  background: var(--primary-color);
  color: white;
}

.modal-footer button[type="primary"]:active {
  background: var(--primary-dark);
}

.modal-footer button:first-child {
  border-right: 1rpx solid var(--border);
}

/* ÊêúÁ¥¢ÂäüËÉΩÊ†∑Âºè */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 20rpx;
  flex-wrap: wrap;
}

.section-title {
  flex-shrink: 0;
  min-width: 140rpx;
}

.search-container {
  position: relative;
  flex: 1;
  min-width: 240rpx;
  max-width: 320rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx 40rpx 20rpx 20rpx;
  border: 2rpx solid var(--border);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  background: var(--card-bg);
  transition: var(--transition);
  box-sizing: border-box;
  min-height: 80rpx;
  line-height: 40rpx;
}

.search-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3rpx rgba(7, 193, 96, 0.1);
}

.search-input::placeholder {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

.clear-search {
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  background: var(--text-tertiary);
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  cursor: pointer;
  transition: var(--transition);
  flex-shrink: 0;
}

.clear-search:active {
  background: var(--text-secondary);
  transform: translateY(-50%) scale(0.9);
}

/* ÂìçÂ∫îÂºèË∞ÉÊï¥ */
@media (max-width: 750rpx) {
  .section-header {
    flex-direction: column;
    align-items: stretch;
    gap: 16rpx;
  }
  
  .search-container {
    max-width: 100%;
    min-width: 100%;
  }
  
  .section-title {
    align-self: flex-start;
  }
}