.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.add-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

input {
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  padding: 15rpx;
  font-size: 28rpx;
}

.list-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background-color: #fff;
  margin-bottom: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.item-count {
  font-size: 28rpx;
  color: #666;
}

.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-section {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

/* 空状态提示样式 */
.empty-tip {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  text-align: center;
  border: 1rpx dashed #07c160;
}

.tip-text {
  font-size: 28rpx;
  color: #07c160;
  line-height: 1.6;
}

button {
  width: 100%;
  font-size: 28rpx;
}

/* 售出弹框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal {
  background-color: #fff;
  border-radius: 16rpx;
  width: 85%;
  max-width: 550rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.modal-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-content {
  padding: 30rpx 24rpx;
}

.modal-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 12rpx 0;
}

.modal-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.modal-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.input-group {
  margin-top: 24rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer button {
  flex: 1;
  border-radius: 0;
  margin: 0;
  border: none;
  font-size: 30rpx;
  padding: 24rpx;
  font-weight: 500;
}

.modal-footer button:first-child {
  border-right: 1rpx solid #f0f0f0;
}

/* 调整商品操作按钮的布局 */
.item-actions {
  display: flex;
  gap: 12rpx;
}

/* 优化按钮样式 */
.item-actions button {
  min-width: 120rpx;
  height: 72rpx;
  font-size: 26rpx;
  padding: 0;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}