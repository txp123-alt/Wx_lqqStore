/* 全局变量 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 容器 */
.home-container {
  min-height: 100vh;
  padding: 0 32rpx;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.bg-circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -100rpx;
  animation-delay: 0s;
}

.bg-circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 200rpx;
  left: -50rpx;
  animation-delay: 2s;
}

.bg-circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  right: 50rpx;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
}

/* 欢迎区域 */
.welcome-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 60rpx 0 40rpx;
  position: relative;
  z-index: 1;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.greeting {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.weather-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
}

.weather-icon {
  font-size: 32rpx;
}

.weather-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
}

/* 统计卡片 */
.stats-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.stat-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: transform 0.3s ease;
}

.stat-card:active {
  transform: scale(0.95);
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.stat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 主要功能区域 */
.main-actions {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.action-title {
  text-align: center;
  margin-bottom: 32rpx;
}

.title-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.title-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 功能卡片 */
.action-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.action-card.primary {
  border-left: 6rpx solid #667eea;
}

.action-card.secondary {
  border-left: 6rpx solid #f093fb;
}

.action-card.tertiary {
  border-left: 6rpx solid #4facfe;
}

.card-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.card-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
}

.action-card.primary .card-icon-wrapper {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(118, 75, 162, 0.15));
}

.action-card.secondary .card-icon-wrapper {
  background: linear-gradient(135deg, rgba(240, 147, 251, 0.15), rgba(245, 87, 108, 0.15));
}

.action-card.tertiary .card-icon-wrapper {
  background: linear-gradient(135deg, rgba(79, 172, 254, 0.15), rgba(0, 242, 254, 0.15));
}

.card-icon {
  font-size: 40rpx;
}

.card-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
}

.card-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.action-card.primary .card-badge {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.action-card.secondary .card-badge.hot {
  background: rgba(240, 147, 251, 0.1);
  color: #f093fb;
}

.action-card.tertiary .card-badge.new {
  background: rgba(79, 172, 254, 0.1);
  color: #4facfe;
}

.card-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: 300;
}

/* 快捷功能 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx 16rpx;
  backdrop-filter: blur(10rpx);
  position: relative;
  z-index: 1;
  margin-bottom: 40rpx;
}

.quick-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  transition: background 0.3s ease;
}

.quick-action:active {
  background: rgba(255, 255, 255, 0.1);
}

.quick-icon {
  font-size: 40rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  transition: transform 0.3s ease;
}

.quick-action:active .quick-icon {
  transform: scale(0.9);
}

.quick-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  text-align: center;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .stats-cards {
    flex-direction: column;
  }
  
  .stat-card {
    flex-direction: row;
    justify-content: flex-start;
  }
  
  .welcome-section {
    flex-direction: column;
    gap: 24rpx;
  }
}