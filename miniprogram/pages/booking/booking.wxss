.booking-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 50rpx;
  padding: 0 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.search-btn {
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
}

/* 分类筛选 */
.category-scroll {
  background-color: #fff;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
}

.category-list {
  display: flex;
  padding: 20rpx;
}

.category-item {
  flex-shrink: 0;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid transparent;
}

.category-item.active {
  background-color: #667eea;
  color: white;
}

/* 商品列表 */
.product-list {
  padding: 20rpx;
}

.product-item {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.product-rating {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.rating-star {
  margin-right: 5rpx;
}

.rating-text {
  font-weight: bold;
}

.product-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.product-category {
  font-size: 24rpx;
  color: #667eea;
  background-color: #f0f4ff;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.product-seller {
  font-size: 24rpx;
  color: #999;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.price-info {
  display: flex;
  align-items: baseline;
}

.current-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.stock-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stock-text {
  font-size: 24rpx;
  color: #666;
}

.sales-text {
  font-size: 24rpx;
  color: #999;
}

.reserve-btn {
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 15rpx 40rpx;
  font-size: 26rpx;
  margin-top: 15rpx;
}

.reserve-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}