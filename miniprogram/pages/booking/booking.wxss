.booking-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 40rpx;
  padding: 0 15rpx;
}

.search-input {
  flex: 1;
  height: 65rpx;
  font-size: 26rpx;
  padding: 0 15rpx;
}

.search-btn {
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 35rpx;
  font-size: 24rpx;
  margin-left: 15rpx;
  width: 30% !important;
  flex-shrink: 0 !important;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  height: 60rpx;
  box-sizing: border-box;
}

.search-btn::after {
  border: none;
}

/* 分类筛选 */
.filter-container {
  position: sticky;
  top: 95rpx;
  z-index: 99;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 12rpx 20rpx;
}

.category-item {
  flex-shrink: 0;
  padding: 10rpx 20rpx;
  margin-right: 15rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid transparent;
}

.category-item.active {
  background-color: #667eea;
  color: white;
}

/* 排序筛选 */
.sort-scroll {
  white-space: nowrap;
}

.sort-list {
  display: flex;
  padding: 10rpx 20rpx;
}

.sort-item {
  flex-shrink: 0;
  padding: 8rpx 20rpx;
  margin-right: 12rpx;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  font-size: 22rpx;
  color: #666;
  display: flex;
  align-items: center;
  border: 1rpx solid transparent;
}

.sort-item.active {
  background-color: #ff6b6b;
  color: white;
}

.sort-arrow {
  margin-left: 5rpx;
  font-size: 18rpx;
}

/* 预订弹窗 */
.reserve-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reserve-modal {
  width: 90%;
  max-height: 85vh;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.reserve-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 36rpx;
  color: #999;
  background-color: #f5f5f5;
  border-radius: 50%;
  transition: all 0.2s;
}

.reserve-modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.reserve-product-info {
  display: flex;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 15rpx;
  margin-bottom: 25rpx;
}

.reserve-product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.reserve-product-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.reserve-product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.reserve-product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reserve-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.reserve-category {
  font-size: 22rpx;
  color: #667eea;
  background-color: #f0f4ff;
  padding: 5rpx 12rpx;
  border-radius: 15rpx;
}

.reserve-form-item {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 15rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.form-textarea-sm {
  min-height: 60rpx;
}

.form-textarea-xs {
  min-height: 72rpx;
}

.quantity-selector {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #666;
  background-color: #fff;
  border: 1rpx solid #eee;
}

.quantity-value {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
}

.reserve-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff5f5;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.total-label {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.reserve-modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  border: none;
  border-radius: 35rpx;
  margin: 0;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #667eea;
  color: #fff;
}


/* 商品列表 */
.product-list {
  padding: 20rpx;
}

.product-item {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.product-category {
  font-size: 24rpx;
  color: #667eea;
  background-color: #f0f4ff;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.product-seller {
  font-size: 24rpx;
  color: #999;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.price-info {
  display: flex;
  align-items: baseline;
}

.current-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.stock-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stock-text {
  font-size: 24rpx;
  color: #666;
}

.sales-text {
  font-size: 24rpx;
  color: #999;
}

.reserve-btn {
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 15rpx 40rpx;
  font-size: 26rpx;
  margin-top: 15rpx;
}

.reserve-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}